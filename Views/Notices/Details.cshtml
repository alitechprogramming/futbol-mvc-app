@model AplicacionMVC.ViewModels.NoticeVM

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle de la Noticia</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Título
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Imagen
        </dt>
        <dd class = "col-sm-10">
            <img  src="data:image/jpg;base64, @Model.UrlImage" alt="Imagen">
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Regresar a la lista</a>
</div>
